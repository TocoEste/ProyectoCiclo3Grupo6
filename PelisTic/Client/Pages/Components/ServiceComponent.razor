<div class="jumbotron">
    <div class="container-fluid">
        <div class="row mb-3">
            @foreach (var pelicula in Peliculas)
            {
                <div class="col-md-4">
                    <div class="card flex-md-row mb-4 box-shadow h-md-300">
                        <div class="card-body d-flex flex-column align-items-start">
                            <div class="card">
                                <img src="@pelicula.PeliculaImagen" class="img-thumbnail card-img-top">
                                <div class="card-body">
                                    <h6 class="card-title">@pelicula.PeliculaNombre</h6>
                                    <p class="text-muted">
                                        @pelicula.PeliculaSinopsis
                                        <br>
                                        <small>@pelicula.Premier</small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@code{
    [Parameter] public List<Pelicula> Peliculas{get;set;}
}