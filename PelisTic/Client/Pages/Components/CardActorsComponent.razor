<div class="jumbotron">
    <h6>Actores</h6>
    <div class="container-fluid">
        <div class="row mb-3">
            @foreach (var actor in Actors)
            {
              <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="@actor.Photo" class="img-fluid rounded-start" alt="..." height="" width="">
                        </div>
                        <div class="card-body d-flex flex-column align-items-center">                            
                           <h5 class="card-title">@actor.ActorName</h5> 
                           <p class="card-text">@actor.Gender</p>
                           <p class="card-text">@actor.Nominations</p>
                           <p class="card-text">@actor.Biography</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">>@actor.BirthDate</small
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

@code{
    [Parameter] public List<Actor> Actors{get;set;}
}