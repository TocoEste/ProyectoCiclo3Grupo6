@page "/Actividad4"


<div class="jumbotron">
    @for (int i = 0; i < Movies.Count; i++)
    {
        <div class="list-group mb-3">
            <div class="row">
                <div class="col-md-3">
                    <img src="@Movies[i].Imagen" class="img-thumbnail" alt="" width="200" height="200">
              

